---
import PageLayout from "@/layouts/Base.astro";
import Section from "@/components/Section.astro";
import { Icon } from "astro-icon/components";

const meta = {
  title: "Studies",
  description:
    "Reproducible human-robot interaction studies and research infrastructure for the HRI community",
};

const services = [
  {
    icon: "hugeicons:user-group",
    title: "Populations",
    description: "Access diverse participant pools for HRI research",
    features: [
      "Diverse demographics",
      "Special populations",
      "Remote participants",
      "In-person studies",
    ],
  },
  {
    icon: "solar:test-tube-line-duotone",
    title: "Studies",
    description: "Standardized study protocols and experimental designs",
    features: [
      "Pre-registered studies",
      "Reproducible protocols",
      "Multi-site studies",
      "Longitudinal research",
    ],
  },
  {
    icon: "solar:chart-2-line-duotone",
    title: "Analysis",
    description: "Statistical analysis and data processing pipelines",
    features: [
      "Standardized metrics",
      "Statistical tools",
      "Data visualization",
      "Open datasets",
    ],
  },
];

const studyTypes = [
  {
    title: "Lab Studies",
    icon: "solar:test-tube-minimalistic-line-duotone",
    description:
      "Controlled laboratory experiments with standardized protocols",
  },
  {
    title: "Field Studies",
    icon: "solar:map-point-line-duotone",
    description: "Real-world deployments in naturalistic settings",
  },
  {
    title: "Online Studies",
    icon: "solar:monitor-smartphone-line-duotone",
    description: "Remote studies using video and simulation platforms",
  },
  {
    title: "Longitudinal Studies",
    icon: "solar:calendar-mark-line-duotone",
    description: "Long-term studies tracking interactions over time",
  },
  {
    title: "Multi-Site Studies",
    icon: "solar:global-line-duotone",
    description: "Coordinated studies across multiple research sites",
  },
  {
    title: "Replication Studies",
    icon: "solar:restart-square-line-duotone",
    description: "Systematic replications of important findings",
  },
];

const benefits = [
  {
    icon: "solar:verified-check-line-duotone",
    title: "Reproducible Science",
    description:
      "Pre-registered protocols and open data ensure reproducibility",
  },
  {
    icon: "solar:users-group-two-rounded-line-duotone",
    title: "Collaborative Research",
    description: "Pool resources and expertise across institutions",
  },
  {
    icon: "solar:database-line-duotone",
    title: "Shared Data",
    description: "Build on existing datasets and contribute your own",
  },
  {
    icon: "solar:diploma-line-duotone",
    title: "Best Practices",
    description: "Learn from and contribute to community standards",
  },
];
---

<PageLayout meta={meta}>
  <h1 class="title mb-6">Studies</h1>

  <!-- Hero Section with CTAs -->
  <Section id="studies-cta">
    <div class="max-w-4xl mx-auto text-center mb-12">
      <p class="text-lg mb-8 text-color-600 dark:text-color-400">
        Advancing human-robot interaction through reproducible, collaborative
        research studies with shared protocols and open data.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="#portal"
          class="inline-flex items-center justify-center h-12 px-8 text-base font-semibold rounded-lg shadow-lg hover:brightness-110 transition-all gradient-brand-horizontal text-surface"
        >
          <Icon name="solar:eye-line-duotone" class="w-5 h-5 mr-2" />
          Browse Studies
        </a>
        <a
          href="#contribute"
          class="inline-flex items-center justify-center h-12 px-8 text-base font-semibold rounded-lg border-2 border-accent-one hover:bg-accent-one/10 transition-all"
        >
          <Icon name="solar:add-square-line-duotone" class="w-5 h-5 mr-2" />
          Contribute Study
        </a>
      </div>
    </div>
  </Section>

  <!-- Services Section -->
  <Section
    id="services"
    title="Research Services"
    subtitle="Comprehensive support for conducting HRI studies"
  >
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {
          services.map((service) => (
            <div class="p-6 bg-special-lighter rounded-lg border border-special hover:border-accent-one/40 transition-all">
              <Icon
                name={service.icon}
                class="w-12 h-12 mb-4 text-accent-two"
              />
              <h3 class="text-lg font-semibold mb-2">{service.title}</h3>
              <p class="text-sm text-color-600 dark:text-color-400 mb-3">
                {service.description}
              </p>
              <ul class="space-y-1">
                {service.features.map((feature) => (
                  <li class="flex items-center gap-2 text-xs">
                    <Icon
                      name="solar:check-circle-bold"
                      class="w-3 h-3 text-accent-one flex-shrink-0"
                    />
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </Section>

  <!-- Studies Portal Section -->
  <Section
    id="portal"
    title="Studies Portal"
    subtitle="Central hub for HRI research studies and data"
  >
    <div class="max-w-5xl mx-auto">
      <div
        class="bg-gradient-to-r from-accent-one/10 to-accent-two/10 rounded-lg p-8 border border-accent-one/20 mb-8"
      >
        <div class="text-center mb-8">
          <h3 class="text-2xl font-semibold mb-4 gradient-brand-text">
            Studies Portal
          </h3>
          <p class="text-color-600 dark:text-color-400 max-w-3xl mx-auto">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. The Studies
            Portal provides access to reproducible HRI studies and research
            infrastructure.
          </p>
        </div>
        <div class="text-center">
          <a
            href="#"
            class="inline-flex items-center justify-center h-12 px-8 text-base font-semibold rounded-lg shadow-lg hover:brightness-110 transition-all gradient-brand-horizontal text-surface"
          >
            <Icon name="solar:login-3-line-duotone" class="w-5 h-5 mr-2" />
            Access Studies Portal
          </a>
        </div>
      </div>
    </div>
  </Section>

  <!-- Contribute Section -->
  <Section
    id="contribute"
    title="Contribute Your Study"
    subtitle="Share your research and help advance the field of HRI"
  >
    <div class="max-w-4xl mx-auto">
      <div class="bg-surface rounded-lg p-8 border border-special">
        <h3 class="text-2xl font-semibold mb-4 text-center gradient-brand-text">
          Ready to Share Your Research?
        </h3>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="text-center">
            <div
              class="w-12 h-12 mx-auto mb-3 rounded-full bg-accent-one/20 flex items-center justify-center"
            >
              <span class="text-lg font-bold text-accent-one">1</span>
            </div>
            <h4 class="font-semibold mb-1">Register</h4>
            <p class="text-xs text-color-600 dark:text-color-400">
              Pre-register your study protocol
            </p>
          </div>

          <div class="text-center">
            <div
              class="w-12 h-12 mx-auto mb-3 rounded-full bg-accent-two/20 flex items-center justify-center"
            >
              <span class="text-lg font-bold text-accent-two">2</span>
            </div>
            <h4 class="font-semibold mb-1">Conduct</h4>
            <p class="text-xs text-color-600 dark:text-color-400">
              Run your study using our tools
            </p>
          </div>

          <div class="text-center">
            <div
              class="w-12 h-12 mx-auto mb-3 rounded-full bg-special/40 flex items-center justify-center"
            >
              <span class="text-lg font-bold text-special-darkest">3</span>
            </div>
            <h4 class="font-semibold mb-1">Share</h4>
            <p class="text-xs text-color-600 dark:text-color-400">
              Upload data and findings
            </p>
          </div>
        </div>

        <p class="text-center mb-6 text-color-600 dark:text-color-400">
          Contributing your study helps build a comprehensive repository of HRI
          research, enabling meta-analyses, replications, and advancing the
          field.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#"
            class="inline-flex items-center justify-center h-12 px-8 text-base font-semibold rounded-lg shadow-lg hover:brightness-110 transition-all gradient-brand-horizontal text-surface"
          >
            <Icon name="solar:add-square-line-duotone" class="w-5 h-5 mr-2" />
            Submit Your Study
          </a>
          <a
            href="#"
            class="inline-flex items-center justify-center h-12 px-8 text-base font-semibold rounded-lg border-2 border-special hover:bg-special-lighter transition-all"
          >
            <Icon name="solar:book-2-line-duotone" class="w-5 h-5 mr-2" />
            View Guidelines
          </a>
        </div>
      </div>
    </div>
  </Section>

  <!-- Get Started Section -->
  <Section
    id="get-started"
    title="Join Our Research Community"
    subtitle="Be part of advancing reproducible science in HRI"
  >
    <div class="max-w-4xl mx-auto text-center">
      <p class="mb-8 text-color-600 dark:text-color-400">
        Whether you're conducting your first HRI study or you're an experienced
        researcher, our platform provides the tools and community support you
        need.
      </p>
      <a
        href="/get-involved/"
        class="inline-flex items-center justify-center h-12 px-10 text-lg font-semibold rounded-lg shadow-lg hover:brightness-110 transition-all gradient-brand-horizontal text-surface"
      >
        Get Involved
      </a>
    </div>
  </Section>
</PageLayout>
