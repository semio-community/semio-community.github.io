// Helper to get current date for comparison
const currentDate = new Date();
const currentYear = currentDate.getFullYear();
const currentMonth = currentDate.getMonth() + 1;
const currentDay = currentDate.getDate();

// Function to check if an event is actually past (for 2025 events)
const isEventPast = (dateRange: string): boolean => {
  // This is a simplified check - in production you'd parse the actual dates
  // For now, we'll consider all 2024 and 2023 events as past
  // and check 2025 events based on current date
  if (dateRange.includes("2024") || dateRange.includes("2023")) return true;

  // Parse month from date range for 2025 events
  const months = [
    "January",
    "February",
    "March",
    "April",
    "May",
    "June",
    "July",
    "August",
    "September",
    "October",
    "November",
    "December",
  ];
  const monthMatch = months.findIndex((m) => dateRange.includes(m));

  if (currentYear > 2025) return true;
  if (currentYear < 2025) return false;

  // If we're in 2025, check the month
  return monthMatch !== -1 && monthMatch < currentMonth - 1;
};
---

<PageLayout meta={meta}>
  <h1 class="title mb-6">Events</h1>

  <!-- Hero Section -->
  <Section id="events-hero">
