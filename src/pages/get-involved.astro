---
import BaseHead from "@/components/BaseHead.astro";
import ThemeProvider from "@/components/theme/ThemeProvider.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import SkipLink from "@/components/SkipLink.astro";
import SiteShell from "@/layouts/SiteShell.astro";
import SectionReact from "@/components/SectionReact";
import { CallToActionButton } from "@/components/ui/CallToActionButton";
import {
  ShieldCheck,
  Eye,
  Target,
  Buildings2,
  Gift,
  HandMoney,
  Letter,
  CalendarMark,
  TestTube,
  UsersGroupTwoRounded,
} from "@solar-icons/react-perf/LineDuotone";
import { CheckCircle } from "@solar-icons/react-perf/Bold";
import HeroReact from "@/components/HeroReact";

const meta = {
  title: "Get Involved",
  description:
    "Join the Semio Community - donate, volunteer, and help advance human-centered robotics and AI",
};

// Volunteer opportunities section removed per specification.

// Donation impacts section removed per specification.

// Membership benefits section removed per specification.
---

<html
  class="overflow-x-hidden grid scroll-pt-[72px] scroll-smooth font-sans text-text text-xl md:text-base antialiased"
  lang="en"
>
  <head>
    <BaseHead title={meta.title} description={meta.description} />
  </head>
  <body class="relative min-h-screen w-full bg-surface">
    <SiteShell>
      <Fragment slot="theme"><ThemeProvider /></Fragment>
      <Fragment slot="skip"><SkipLink /></Fragment>
      <Fragment slot="header"><Header /></Fragment>

      <!-- Hero Section -->
      <div
        class="relative pt-16 md:pt-20 lg:pt-4 mb-8 sm:mb-12 backdrop-blur-lg w-screen left-1/2 right-1/2 -ml-[50vw] -mr-[50vw]"
      >
        <HeroReact>
          <!-- Title -->
          <h1
            class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl text-accent-base mb-3 sm:mb-4 md:mb-6 font-semibold uppercase tracking-wide"
          >
            Get Involved
          </h1>

          <!-- Subtitle -->
          <p
            class="text-sm sm:text-base md:text-lg lg:text-xl font-light text-accent-base mb-8 sm:mb-10 md:mb-12 max-w-3xl mx-auto leading-relaxed px-2 sm:px-0"
          >
            Be part of a global community advancing human-centered robotics and
            AI. Your support helps us foster reproducible science and develop
            reusable systems for human-robot interaction.
          </p>

          <!-- CTA Button -->
          <div class="flex flex-wrap justify-center gap-4 mb-8">
            <CallToActionButton href="#donate" size="large">
              Make a Donation
            </CallToActionButton>
            <CallToActionButton
              href="#volunteer"
              size="large"
              variant="secondary"
            >
              Volunteer
            </CallToActionButton>
            <CallToActionButton
              href="#mailing-list"
              size="large"
              variant="tertiary"
            >
              Join the Mailing List
            </CallToActionButton>
          </div>
        </HeroReact>
      </div>

      <!-- Donate Section -->
      <SectionReact
        id="donate"
        title="Support Semio Community"
        subtitle="Your donations enable us to advance open science in robotics"
      >
        <div class="max-w-5xl mx-auto">
          <div
            class="bg-gradient-to-r from-accent-one/10 to-accent-two/10 rounded-lg p-8 border border-accent-two/20 mb-8 backdrop-blur-lg"
          >
            <h3
              class="text-2xl font-semibold mb-4 text-center text-accent-base"
            >
              Why Your Support Matters
            </h3>
            <p class="text-center mb-6 text-color-600 dark:text-color-400">
              As a 501(c)(3) nonprofit organization, we rely on donations to
              sustain our mission of making robotics research more accessible,
              reproducible, and impactful.
            </p>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
              <div class="text-center">
                <ShieldCheck
                  className="w-12 h-12 mx-auto mb-3 text-accent-two"
                />
                <h4 class="font-semibold mb-2">Tax Deductible</h4>
                <p class="text-sm text-color-600 dark:text-color-400">
                  All donations are tax-deductible to the fullest extent of the
                  law
                </p>
              </div>
              <div class="text-center">
                <Eye className="w-12 h-12 mx-auto mb-3 text-accent-two" />
                <h4 class="font-semibold mb-2">Transparent</h4>
                <p class="text-sm text-color-600 dark:text-color-400">
                  Annual reports show exactly how your donations are used
                </p>
              </div>
              <div class="text-center">
                <Target className="w-12 h-12 mx-auto mb-3 text-accent-two" />
                <h4 class="font-semibold mb-2">Impactful</h4>
                <p class="text-sm text-color-600 dark:text-color-400">
                  100% of donations directly support our programs and
                  initiatives
                </p>
              </div>
            </div>

            <div class="text-center">
              <CallToActionButton
                href="https://donate.stripe.com/cNiaEX4ZE07R8Wj8Yva7C00"
                size="large"
              >
                Donate Now
              </CallToActionButton>
            </div>
          </div>

          <!-- Other Ways to Give -->
          <div class="bg-surface rounded-lg p-6 border border-special">
            <h3 class="text-lg font-semibold mb-4 text-center">
              Other Ways to Give
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
              <div>
                <Buildings2
                  className="w-10 h-10 mx-auto mb-3 text-accent-two"
                />
                <h4 class="font-semibold mb-2">Corporate Sponsorship</h4>
                <p class="text-sm text-color-600 dark:text-color-400">
                  Partner with us through corporate giving programs
                </p>
              </div>
              <div>
                <Gift className="w-10 h-10 mx-auto mb-3 text-accent-two" />
                <h4 class="font-semibold mb-2">In-Kind Donations</h4>
                <p class="text-sm text-color-600 dark:text-color-400">
                  Donate equipment, software licenses, or services
                </p>
              </div>
              <div>
                <HandMoney className="w-10 h-10 mx-auto mb-3 text-accent-two" />
                <h4 class="font-semibold mb-2">Planned Giving</h4>
                <p class="text-sm text-color-600 dark:text-color-400">
                  Include Semio Community in your estate planning
                </p>
              </div>
            </div>
          </div>
        </div>
      </SectionReact>

      <!-- Volunteer Section -->
      <SectionReact
        id="volunteer"
        title="Join the Community"
        subtitle="Share your skills and passion to advance human-centered robotics and AI"
        variant="secondary"
      >
        <div class="max-w-5xl mx.auto">
          <!-- Volunteer Opportunities section removed per specification. -->

          <!-- Volunteer Benefits -->
          <div
            class="bg-gradient-to-r from-accent-one/10 to-accent-two/10 rounded-lg p-8 border border-accent-two/20 backdrop-blur-lg"
          >
            <h3 class="text-xl font-semibold mb-6 text-center text-accent-base">
              Volunteer Benefits
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
              <div class="flex items-start gap-3">
                <CheckCircle
                  className="w-5 h-5 text-accent-one flex-shrink-0 mt-2"
                />
                <div>
                  <h4 class="font-semibold mb-1">Professional Network</h4>
                  <p class="text-sm text-color-600 dark:text-color-400">
                    Connect with researchers and professionals in robotics and
                    AI
                  </p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <CheckCircle
                  className="w-5 h-5 text-accent-one flex-shrink-0 mt-2"
                />
                <div>
                  <h4 class="font-semibold mb-1">Skill Development</h4>
                  <p class="text-sm text-color-600 dark:text-color-400">
                    Gain hands-on experience with cutting-edge robotics and AI
                    technologies
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <CheckCircle
                  className="w-5 h-5 text-accent-one flex-shrink-0 mt-2"
                />
                <div>
                  <h4 class="font-semibold mb-1">Recognition</h4>
                  <p class="text-sm text-color-600 dark:text-color-400">
                    Receive certificates and LinkedIn recommendations
                  </p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <CheckCircle
                  className="w-5 h-5 text-accent-one flex-shrink-0 mt-2"
                />
                <div>
                  <h4 class="font-semibold mb-1">Flexible Commitment</h4>
                  <p class="text-sm text-color-600 dark:text-color-400">
                    Choose projects that fit your schedule and interests
                  </p>
                </div>
              </div>
            </div>

            <div class="text-center">
              <CallToActionButton
                href="https://forms.gle/5iiaThSsGUMzXWsu6"
                size="large"
                variant="secondary"
              >
                Sign Up as Volunteer
              </CallToActionButton>
            </div>
          </div>
        </div>
      </SectionReact>

      <!-- Mailing List Section -->
      <SectionReact
        id="mailing-list"
        title="Join Our Mailing List"
        subtitle="Stay connected with the latest news, events, and opportunities"
        variant="tertiary"
      >
        <div class="max-w-4xl mx-auto">
          <div
            class="bg-special-lighter rounded-lg p-8 border border-special backdrop-blur-lg"
          >
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
              <div>
                <h3 class="text-lg font-semibold mb-4">What You'll Receive:</h3>
                <ul class="space-y-2">
                  <li class="flex items-start gap-2">
                    <Letter
                      className="w-5 h-5 text-accent-three flex-shrink-0 mt-0.5"
                    />
                    <span class="text-sm"
                      >Regular newsletter with community updates</span
                    >
                  </li>
                  <li class="flex items-start gap-2">
                    <CalendarMark
                      className="w-5 h-5 text-accent-three flex-shrink-0 mt-0.5"
                    />
                    <span class="text-sm"
                      >Early announcements for events and workshops</span
                    >
                  </li>
                  <li class="flex items-start gap-2">
                    <TestTube
                      className="w-5 h-5 text-accent-three flex-shrink-0 mt-0.5"
                    />
                    <span class="text-sm">Research highlights and findings</span
                    >
                  </li>
                  <li class="flex items-start gap-2">
                    <UsersGroupTwoRounded
                      className="w-5 h-5 text-accent-three flex-shrink-0 mt-0.5"
                    />
                    <span class="text-sm"
                      >Volunteer and collaboration opportunities</span
                    >
                  </li>
                </ul>
              </div>

              <div>
                <h3 class="text-lg font-semibold mb-4">Sign Up:</h3>
                <CallToActionButton
                  size="large"
                  variant="tertiary"
                  fullWidth={true}
                  href="https://forms.gle/5iiaThSsGUMzXWsu6"
                >
                  Connect with Us
                </CallToActionButton>
              </div>
            </div>

            <div class="text-center text-sm text-color-600 dark:text-color-400">
              <p>
                We respect your privacy and never share your information with
                third parties.
              </p>
            </div>
          </div>
        </div>
      </SectionReact>
    </SiteShell>
  </body>
</html>

