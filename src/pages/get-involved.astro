---
import PageLayout from "@/layouts/Base.astro";
import Section from "@/components/Section.astro";
import CallToActionButton from "@/components/ui/CallToActionButton.astro";
import { Icon } from "astro-icon/components";
import Hero from "@/components/Hero.astro";

const meta = {
  title: "Get Involved",
  description:
    "Join the Semio Community - donate, volunteer, and help advance human-centered robotics and AI",
};

// Volunteer opportunities section removed per specification.

// Donation impacts section removed per specification.

// Membership benefits section removed per specification.
---

<PageLayout meta={meta}>
  <!-- Hero Section -->
  <div
    class="relative pt-16 md:pt-20 lg:pt-4 mb-8 sm:mb-12"
    style="width: 100vw; position: relative; left: 50%; right: 50%; margin-left: -50vw; margin-right: -50vw;"
  >
    <Hero>
      <!-- Title -->
      <h1
        class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl text-accent-base mb-3 sm:mb-4 md:mb-6 font-semibold uppercase tracking-wide"
      >
        Get Involved
      </h1>

      <!-- Subtitle -->
      <p
        class="text-sm sm:text-base md:text-lg lg:text-xl font-light text-accent-base mb-8 sm:mb-10 md:mb-12 max-w-3xl mx-auto leading-relaxed px-2 sm:px-0"
      >
        Be part of a global community advancing human-centered robotics and AI.
        Your support helps us foster reproducible science and develop reusable
        systems for human-robot interaction.
      </p>

      <!-- CTA Button -->
      <div class="flex flex-wrap justify-center gap-4 mb-8">
        <CallToActionButton
          href="#donate"
          text="Make a Donation"
          size="large"
        />
        <CallToActionButton
          href="#volunteer"
          text="Volunteer"
          size="large"
          variant="secondary"
        />
        <CallToActionButton
          href="#mailing-list"
          text="Join the Mailing List"
          size="large"
          variant="tertiary"
        />
      </div>
    </Hero>
  </div>

  <!-- Donate Section -->
  <Section
    id="donate"
    title="Support Semio Community"
    subtitle="Your donations enable us to advance open science in robotics"
  >
    <div class="max-w-5xl mx-auto">
      <div
        class="bg-gradient-to-r from-accent-one/10 to-accent-two/10 rounded-lg p-8 border border-accent-two/20 mb-8"
      >
        <h3 class="text-2xl font-semibold mb-4 text-center text-accent-base">
          Why Your Support Matters
        </h3>
        <p class="text-center mb-6 text-color-600 dark:text-color-400">
          As a 501(c)(3) nonprofit organization, we rely on donations to sustain
          our mission of making robotics research more accessible, reproducible,
          and impactful.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="text-center">
            <Icon
              name="solar:shield-check-line-duotone"
              class="w-12 h-12 mx-auto mb-3 text-accent-two"
            />
            <h4 class="font-semibold mb-2">Tax Deductible</h4>
            <p class="text-sm text-color-600 dark:text-color-400">
              All donations are tax-deductible to the fullest extent of the law
            </p>
          </div>
          <div class="text-center">
            <Icon
              name="solar:eye-line-duotone"
              class="w-12 h-12 mx-auto mb-3 text-accent-two"
            />
            <h4 class="font-semibold mb-2">Transparent</h4>
            <p class="text-sm text-color-600 dark:text-color-400">
              Annual reports show exactly how your donations are used
            </p>
          </div>
          <div class="text-center">
            <Icon
              name="solar:target-line-duotone"
              class="w-12 h-12 mx-auto mb-3 text-accent-two"
            />
            <h4 class="font-semibold mb-2">Impactful</h4>
            <p class="text-sm text-color-600 dark:text-color-400">
              100% of donations directly support our programs and initiatives
            </p>
          </div>
        </div>

        <div class="text-center">
          <CallToActionButton
            href="https://donate.stripe.com/cNiaEX4ZE07R8Wj8Yva7C00"
            text="Donate Now"
            size="large"
          />
        </div>
      </div>

      <!-- Other Ways to Give -->
      <div class="bg-surface rounded-lg p-6 border border-special">
        <h3 class="text-lg font-semibold mb-4 text-center">
          Other Ways to Give
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
          <div>
            <Icon
              name="solar:buildings-2-line-duotone"
              class="w-10 h-10 mx-auto mb-3 text-accent-two"
            />
            <h4 class="font-semibold mb-2">Corporate Sponsorship</h4>
            <p class="text-sm text-color-600 dark:text-color-400">
              Partner with us through corporate giving programs
            </p>
          </div>
          <div>
            <Icon
              name="solar:gift-line-duotone"
              class="w-10 h-10 mx-auto mb-3 text-accent-two"
            />
            <h4 class="font-semibold mb-2">In-Kind Donations</h4>
            <p class="text-sm text-color-600 dark:text-color-400">
              Donate equipment, software licenses, or services
            </p>
          </div>
          <div>
            <Icon
              name="solar:hand-money-line-duotone"
              class="w-10 h-10 mx-auto mb-3 text-accent-two"
            />
            <h4 class="font-semibold mb-2">Planned Giving</h4>
            <p class="text-sm text-color-600 dark:text-color-400">
              Include Semio Community in your estate planning
            </p>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Volunteer Section -->
  <Section
    id="volunteer"
    title="Join the Community"
    subtitle="Share your skills and passion to advance human-centered robotics and AI"
    variant="secondary"
  >
    <div class="max-w-5xl mx-auto">
      <!-- Volunteer Opportunities section removed per specification. -->

      <!-- Volunteer Benefits -->
      <div
        class="bg-gradient-to-r from-accent-one/10 to-accent-two/10 rounded-lg p-8 border border-accent-two/20"
      >
        <h3 class="text-xl font-semibold mb-6 text-center text-accent-base">
          Volunteer Benefits
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
          <div class="flex items-start gap-3">
            <Icon
              name="solar:check-circle-bold"
              class="w-5 h-5 text-accent-one flex-shrink-0 mt-2"
            />
            <div>
              <h4 class="font-semibold mb-1">Professional Network</h4>
              <p class="text-sm text-color-600 dark:text-color-400">
                Connect with researchers and professionals in robotics and AI
              </p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <Icon
              name="solar:check-circle-bold"
              class="w-5 h-5 text-accent-one flex-shrink-0 mt-2"
            />
            <div>
              <h4 class="font-semibold mb-1">Skill Development</h4>
              <p class="text-sm text-color-600 dark:text-color-400">
                Gain hands-on experience with cutting-edge robotics and AI
                technologies
              </p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <Icon
              name="solar:check-circle-bold"
              class="w-5 h-5 text-accent-one flex-shrink-0 mt-2"
            />
            <div>
              <h4 class="font-semibold mb-1">Recognition</h4>
              <p class="text-sm text-color-600 dark:text-color-400">
                Receive certificates and LinkedIn recommendations
              </p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <Icon
              name="solar:check-circle-bold"
              class="w-5 h-5 text-accent-one flex-shrink-0 mt-2"
            />
            <div>
              <h4 class="font-semibold mb-1">Flexible Commitment</h4>
              <p class="text-sm text-color-600 dark:text-color-400">
                Choose projects that fit your schedule and interests
              </p>
            </div>
          </div>
        </div>

        <div class="text-center">
          <CallToActionButton
            href="https://forms.gle/5iiaThSsGUMzXWsu6"
            text="Sign Up as Volunteer"
            size="large"
            variant="secondary"
          />
        </div>
      </div>
    </div>
  </Section>

  <!-- Mailing List Section -->
  <Section
    id="mailing-list"
    title="Join Our Mailing List"
    subtitle="Stay connected with the latest news, events, and opportunities"
    variant="tertiary"
  >
    <div class="max-w-4xl mx-auto">
      <div class="bg-special-lighter rounded-lg p-8 border border-special">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">What You'll Receive:</h3>
            <ul class="space-y-2">
              <li class="flex items-start gap-2">
                <Icon
                  name="solar:letter-line-duotone"
                  class="w-5 h-5 text-accent-three flex-shrink-0 mt-0.5"
                />
                <span class="text-sm"
                  >Regular newsletter with community updates</span
                >
              </li>
              <li class="flex items-start gap-2">
                <Icon
                  name="solar:calendar-mark-line-duotone"
                  class="w-5 h-5 text-accent-three flex-shrink-0 mt-0.5"
                />
                <span class="text-sm"
                  >Early announcements for events and workshops</span
                >
              </li>
              <li class="flex items-start gap-2">
                <Icon
                  name="solar:test-tube-line-duotone"
                  class="w-5 h-5 text-accent-three flex-shrink-0 mt-0.5"
                />
                <span class="text-sm">Research highlights and findings</span>
              </li>
              <li class="flex items-start gap-2">
                <Icon
                  name="solar:users-group-two-rounded-line-duotone"
                  class="w-5 h-5 text-accent-three flex-shrink-0 mt-0.5"
                />
                <span class="text-sm"
                  >Volunteer and collaboration opportunities</span
                >
              </li>
            </ul>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4">Sign Up:</h3>
            <CallToActionButton
              text="Connect with Us"
              size="large"
              variant="tertiary"
              fullWidth={true}
              href="https://forms.gle/5iiaThSsGUMzXWsu6"
            />
          </div>
        </div>

        <div class="text-center text-sm text-color-600 dark:text-color-400">
          <p>
            We respect your privacy and never share your information with third
            parties.
          </p>
        </div>
      </div>
    </div>
  </Section>

