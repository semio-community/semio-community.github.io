  <!-- Contact Section -->
  <Section
    id="contact"
    title="Get in Touch"
    subtitle="Have questions or want to learn more about getting involved?"
  >
    <div class="max-w-2xl mx-auto text-center">
      <p class="mb-6 text-color-600 dark:text-color-400">
        We'd love to hear from you! Whether you're interested in donating,
        volunteering, or partnering with us, we're here to help.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <CallToActionButton
          href="https://forms.gle/5iiaThSsGUMzXWsu6"
          text="Contact Us"
          size="large"
        />
      </div>
    </div>
  </Section>
</PageLayout>
