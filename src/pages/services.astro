---
import PageLayout from "@/layouts/Base.astro";
import Section from "@/components/Section.astro";
import FeatureCard from "@/components/cards/FeatureCard.astro";
import CallToActionButton from "@/components/ui/CallToActionButton.astro";
import { Icon } from "astro-icon/components";
import Hero from "@/components/Hero.astro";

const meta = {
  title: "Services",
  description:
    "Comprehensive support services for robotics hardware development, software engineering, and research programs in human-robot interaction",
};

const hardwareServices = [
  {
    icon: "solar:settings-minimalistic-line-duotone",
    title: "Design",
    subtitle: "Design for Manufacturing",
    description:
      "Expert guidance on making your robotic designs ready for scale manufacturing",
  },
  {
    icon: "solar:box-minimalistic-line-duotone",
    title: "Manufacturing",
    subtitle: "Contract Manufacturing",
    description:
      "End-to-end scale manufacturing services for robotics hardware",
  },
  {
    icon: "solar:database-line-duotone",
    title: "Inventory",
    subtitle: "Inventory Management",
    description: "Storage and inventory solutions for robotics components",
  },
  {
    icon: "solar:cart-large-2-line-duotone",
    title: "Sales",
    subtitle: "Sales & Distribution",
    description:
      "Make your hardware available to the broader robotics community",
  },
  {
    icon: "solar:delivery-line-duotone",
    title: "Shipping",
    subtitle: "Global Shipping",
    description: "Worldwide distribution of your robotics hardware platforms",
  },
  {
    icon: "solar:headphones-round-line-duotone",
    title: "Support",
    subtitle: "Technical Support",
    description:
      "Ongoing technical support for your robotics hardware platforms",
  },
];

const softwareServices = [
  {
    icon: "solar:code-2-line-duotone",
    title: "Code Refactoring",
    subtitle: "Code Translation",
    description:
      "Transform research code into production-ready software with industry best practices",
  },
  {
    icon: "hugeicons:user-group",
    title: "Community Pool",
    subtitle: "Open Source Bounties",
    description:
      "Contribute to open projects and earn rewards for solving community challenges",
  },
  {
    icon: "solar:shield-check-line-duotone",
    title: "Quality Assurance",
    subtitle: "Testing & Validation",
    description:
      "Comprehensive testing and validation for robotics applications",
  },
  {
    icon: "solar:document-line-duotone",
    title: "Documentation",
    subtitle: "Technical Writing",
    description: "Clear, comprehensive documentation for all software projects",
  },
  {
    icon: "solar:square-academic-cap-line-duotone",
    title: "Training",
    subtitle: "Workshops & Tutorials",
    description: "Learn best practices for developing HRI software systems",
  },
  {
    icon: "solar:headphones-round-line-duotone",
    title: "Support",
    subtitle: "Cloud & Edge Support",
    description:
      "Ongoing technical support for your robotics software tools and frameworks",
  },
];

const researchServices = [
  {
    icon: "solar:test-tube-line-duotone",
    title: "Replication Studies",
    description:
      "Plan, pre-register, and execute confirmatory studies with standardized protocols",
  },
  {
    icon: "solar:document-line-duotone",
    title: "Grants",
    description:
      "Identify, develop, and coordinate submissions for research funding",
  },
  {
    icon: "solar:users-group-two-rounded-line-duotone",
    title: "Broader Impacts",
    description:
      "Design and deliver activities and artifacts that meet program requirements",
  },
  {
    icon: "solar:square-academic-cap-line-duotone",
    title: "Events",
    description:
      "Plan, host, and support workshops, user studies, and symposia for the community",
  },
  {
    icon: "hugeicons:user-group",
    title: "Populations",
    description:
      "Recruit diverse in-person and remote participants, including special populations",
  },
  {
    icon: "solar:chart-2-line-duotone",
    title: "Analysis",
    description:
      "Build robust pipelines for data cleaning, statistical modeling, and visualization",
  },
];
---

<PageLayout meta={meta} noPaddingTop>
  <!-- Hero Section -->
  <div
    class="relative pt-16 md:pt-20 lg:pt-4 mb-8 sm:mb-12"
    style="width: 100vw; position: relative; left: 50%; right: 50%; margin-left: -50vw; margin-right: -50vw;"
  >
    <Hero>
      <!-- Title -->
      <h1
        class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl text-accent-base mb-3 sm:mb-4 md:mb-6 font-semibold uppercase tracking-wide"
      >
        Services
      </h1>

      <!-- Subtitle -->
      <p
        class="text-sm sm:text-base md:text-lg lg:text-xl font-light text-accent-base mb-8 sm:mb-10 md:mb-12 max-w-3xl mx-auto leading-relaxed px-2 sm:px-0"
      >
        Comprehensive support services to accelerate your robotics development,
        from hardware manufacturing to software deployment and research
        facilitation.
      </p>

      <!-- CTA Button -->
      <div class="flex flex-wrap justify-center gap-4 mb-8">
        <CallToActionButton
          href="#hardware"
          text="Hardware Services"
          size="large"
          indicatorText="6"
        />
        <CallToActionButton
          href="#software"
          text="Software Services"
          size="large"
          variant="secondary"
          indicatorText="6"
        />
        <CallToActionButton
          href="#research"
          text="Research Services"
          size="large"
          variant="tertiary"
          indicatorText="6"
        />
      </div>
    </Hero>
  </div>

  <!-- Hardware Services Section -->
  <Section
    id="hardware"
    title="Hardware Services"
    subtitle="Comprehensive support for scaling robotics hardware development and deployment"
    variant="primary"
  >
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          hardwareServices.map((service) => (
            <FeatureCard
              icon={service.icon}
              title={service.title}
              description={service.description}
            />
          ))
        }
      </div>
      <div class="text-center mt-12">
        <p class="text-color-600 dark:text-color-400 mb-6">
          From initial design to global distribution, we provide end-to-end
          support for your robotics hardware projects.
        </p>
        <CallToActionButton
          href="https://forms.gle/5iiaThSsGUMzXWsu6"
          text="Request Hardware Services"
          size="large"
        />
      </div>
    </div>
  </Section>

  <!-- Software Services Section -->
  <Section
    id="software"
    title="Software Services"
    subtitle="Supporting the transition from research code to production-ready systems"
    variant="secondary"
  >
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          softwareServices.map((service) => (
            <FeatureCard
              icon={service.icon}
              title={service.title}
              description={service.description}
              variant="secondary"
            />
          ))
        }
      </div>
      <div class="text-center mt-12">
        <p class="text-color-600 dark:text-color-400 mb-6">
          Transform your research code into robust, production-ready systems
          with our comprehensive software services.
        </p>
        <CallToActionButton
          href="https://forms.gle/5iiaThSsGUMzXWsu6"
          text="Request Software Services"
          size="large"
          variant="secondary"
        />
      </div>
    </div>
  </Section>

  <!-- Research Services Section -->
  <Section
    id="research"
    title="Research Services"
    subtitle="Comprehensive support for conducting replicable HRI research and studies"
    variant="tertiary"
  >
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {
          researchServices.map((service) => (
            <FeatureCard
              icon={service.icon}
              title={service.title}
              description={service.description}
              variant="tertiary"
            />
          ))
        }
      </div>
      <div class="text-center mt-12">
        <p class="text-color-600 dark:text-color-400 mb-6">
          Enable reproducible, scalable research with our comprehensive study
          support services.
        </p>
        <CallToActionButton
          href="https://forms.gle/5iiaThSsGUMzXWsu6"
          text="Request Research Services"
          size="large"
          variant="tertiary"
        />
      </div>
    </div>
  </Section>

  <!-- Benefits Section -->
  <Section
    id="benefits"
    title="Why Choose Our Services?"
    subtitle="Benefits of working with the Semio Community"
  >
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="flex items-start gap-4">
          <Icon
            name="solar:verified-check-line-duotone"
            class="w-10 h-10 text-accent-one flex-shrink-0"
          />
          <div>
            <h3 class="font-semibold mb-2">Community-Driven</h3>
            <p class="text-sm text-color-600 dark:text-color-400">
              Benefit from collective expertise and shared resources across the
              entire HRI community.
            </p>
          </div>
        </div>
        <div class="flex items-start gap-4">
          <Icon
            name="solar:rocket-line-duotone"
            class="w-10 h-10 text-accent-two flex-shrink-0"
          />
          <div>
            <h3 class="font-semibold mb-2">Accelerate Development</h3>
            <p class="text-sm text-color-600 dark:text-color-400">
              Speed up your time to market with proven solutions and expert
              guidance.
            </p>
          </div>
        </div>
        <div class="flex items-start gap-4">
          <Icon
            name="solar:shield-check-line-duotone"
            class="w-10 h-10 text-special flex-shrink-0"
          />
          <div>
            <h3 class="font-semibold mb-2">Quality Assurance</h3>
            <p class="text-sm text-color-600 dark:text-color-400">
              Ensure reliability and robustness with industry-standard testing
              and validation.
            </p>
          </div>
        </div>
        <div class="flex items-start gap-4">
          <Icon
            name="solar:users-group-two-rounded-line-duotone"
            class="w-10 h-10 text-green-500 flex-shrink-0"
          />
          <div>
            <h3 class="font-semibold mb-2">Global Network</h3>
            <p class="text-sm text-color-600 dark:text-color-400">
              Connect with researchers, developers, and industry partners
              worldwide.
            </p>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Process Section -->
  <Section
    id="process"
    title="How It Works"
    subtitle="Simple steps to access our services"
  >
    <div class="max-w-4xl mx-auto">
      <div class="space-y-8">
        <div class="flex items-start gap-4">
          <div
            class="w-10 h-10 rounded-full bg-accent-base/20 flex items-center justify-center flex-shrink-0"
          >
            <span class="text-lg font-bold text-accent-base">1</span>
          </div>
          <div>
            <h3 class="font-semibold mb-1">Contact Us</h3>
            <p class="text-sm text-color-600 dark:text-color-400">
              Reach out through our Get Involved page to discuss your project
              needs and requirements.
            </p>
          </div>
        </div>
        <div class="flex items-start gap-4">
          <div
            class="w-10 h-10 rounded-full bg-accent-base/20 flex items-center justify-center flex-shrink-0"
          >
            <span class="text-lg font-bold text-accent-base">2</span>
          </div>
          <div>
            <h3 class="font-semibold mb-1">Consultation</h3>
            <p class="text-sm text-color-600 dark:text-color-400">
              We'll work with you to understand your goals and recommend the
              best services for your needs.
            </p>
          </div>
        </div>
        <div class="flex items-start gap-4">
          <div
            class="w-10 h-10 rounded-full bg-accent-base/20 flex items-center justify-center flex-shrink-0"
          >
            <span class="text-lg font-bold text-accent-base">3</span>
          </div>
          <div>
            <h3 class="font-semibold mb-1">Implementation</h3>
            <p class="text-sm text-color-600 dark:text-color-400">
              Our expert team will deliver the services, keeping you informed
              throughout the process.
            </p>
          </div>
        </div>
        <div class="flex items-start gap-4">
          <div
            class="w-10 h-10 rounded-full bg-accent-base/20 flex items-center justify-center flex-shrink-0"
          >
            <span class="text-lg font-bold text-accent-base">4</span>
          </div>
          <div>
            <h3 class="font-semibold mb-1">Ongoing Support</h3>
            <p class="text-sm text-color-600 dark:text-color-400">
              Continue to benefit from community support and updates as your
              project evolves.
            </p>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Call to Action -->
  <Section id="get-started">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
      <p class="text-lg mb-8 text-color-600 dark:text-color-400">
        Whether you're developing hardware, software, or conducting research,
        our services can help you achieve your goals faster and more
        effectively.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <CallToActionButton
          href="https://forms.gle/5iiaThSsGUMzXWsu6"
          text="Request Services"
          size="large"
        />
      </div>
    </div>
  </Section>
</PageLayout>
