---
import { type CollectionEntry, getCollection } from "astro:content";
import BaseHead from "@/components/BaseHead.astro";
import SiteShell from "@/layouts/SiteShell.astro";
import { getAllOrganizations } from "@/data/organizations";
import { getPeopleByOrganization } from "@/data/people";
import { getAllHardware } from "@/data/hardware";
import { getAllSoftware } from "@/data/software";
import {
  OrganizationDetail,
  type KeyContact,
} from "@/components/detail/views/OrganizationDetail";

type PartnerEntry = CollectionEntry<"organizations">;

export async function getStaticPaths() {
  const organizations = await getCollection("organizations", ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
  });
  const partners = organizations.filter((org) => org.data.isPartner);
  return partners.map((entry) => ({
    params: { slug: entry.id },
    props: { entry },
  }));
}

interface Props {
  entry: PartnerEntry;
}

const { entry } = Astro.props as Props;
const { data } = entry;

async function getRelatedOrganizations(partner: PartnerEntry, limit = 3) {
  const allOrganizations = await getAllOrganizations();
  const otherOrganizations = allOrganizations.filter(
    (p) => p.id !== partner.id,
  );

  const scoredOrganizations = otherOrganizations
    .map((p) => {
      let score = 0;
      if (p.data.type === partner.data.type) score += 2;
      if (p.data.category === partner.data.category) score += 2;
      if (p.data.location.country === partner.data.location.country) score += 1;
      return { partner: p, score };
    })
    .filter((sp) => sp.score > 0)
    .sort((a, b) => b.score - a.score);

  return scoredOrganizations.slice(0, limit).map((sp) => sp.partner);
}

const relatedOrganizations = await getRelatedOrganizations(entry, 3);

async function getPartnerRelatedContent(partnerId: string) {
  const hardware = (await getAllHardware()).filter((hw) =>
    hw.data.contributors?.some(
      (contributor) =>
        contributor.type === "organization" &&
        contributor.organizationId === partnerId,
    ),
  );

  const software = (await getAllSoftware()).filter((sw) =>
    sw.data.contributors?.some(
      (contributor) =>
        contributor.type === "organization" &&
        contributor.organizationId === partnerId,
    ),
  );

  return { research: [], hardware, software, events: [] } as {
    research: CollectionEntry<"research">[];
    hardware: CollectionEntry<"hardware">[];
    software: CollectionEntry<"software">[];
    events: CollectionEntry<"events">[];
  };
}

const relatedContent = await getPartnerRelatedContent(entry.id);

const meta = {
  title: `${data.name} - Partner Organization`,
  description: data.description,
};
const ogImage = `/og/organizations/${entry.id}.png`;

const affiliatedPeople = await getPeopleByOrganization(entry.id);
const keyContacts: KeyContact[] = affiliatedPeople
  .slice(0, 6)
  .map((personEntry) => {
    const affiliation = personEntry.data.affiliations?.find(
      (aff) => aff.organizationId === entry.id,
    );
    return {
      personId: personEntry.id,
      person: personEntry.data,
      role: affiliation?.role,
      department: affiliation?.department,
      currentAffiliation: affiliation
        ? {
            organizationId: entry.id,
            partnerName: data.shortName || data.name,
            role: affiliation.role,
          }
        : undefined,
    };
  });
---

<html
  class="overflow-x-hidden grid scroll-pt-[72px] scroll-smooth font-sans text-text text-xl md:text-base antialiased"
  lang="en"
>
  <head>
    <BaseHead
      title={meta.title}
      description={meta.description}
      ogImage={ogImage}
    />
  </head>
  <body class="relative min-h-screen w-full bg-surface">
    <SiteShell noPaddingTop showBackground containerClassName="max-w-5xl">
      <OrganizationDetail
        data={data}
        relatedContent={relatedContent}
        relatedOrganizations={relatedOrganizations}
        keyContacts={keyContacts}
      />
    </SiteShell>
  </body>
</html>
