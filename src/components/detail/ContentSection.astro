---
export interface Props {
  title: string;
  content?: string | null;
  className?: string;
}

const { title, content, className = "" } = Astro.props;

// Only render if we have content
if (!content) return null;
---

<div class={`content-section mb-8 ${className}`}>
  <div
    class="bg-gradient-to-br from-surface-lighter to-surface rounded-xl border border-accent-one/20 p-6"
  >
    <h3 class="text-xs font-semibold mb-3 text-accent-base uppercase tracking-wider">
      {title}
    </h3>
    <div class="text-accent-base leading-relaxed">
      {/* Support both plain text and HTML content */}
      {
        Astro.slots.has("default") ? (
          <slot />
        ) : (
          <p set:html={content} />
        )
      }
    </div>
  </div>
</div>
