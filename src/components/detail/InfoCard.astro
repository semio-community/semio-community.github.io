---
export interface Props {
  title: string;
  className?: string;
}

const { title, className = "" } = Astro.props;
---

<div
  class={`info-card bg-gradient-to-br from-surface-lighter to-surface rounded-xl border border-accent-one/20 p-6 ${className}`}
>
  <div class="flex items-center gap-2 mb-4">
    <h3 class="text-xs font-semibold text-accent-base uppercase tracking-wider">
      {title}
    </h3>
  </div>

  <div class="info-card-content">
    <slot />
  </div>
</div>
