---
import { ItemCard as ItemCardReact } from "./ItemCard";
import type { ImageMetadata } from "astro";

export interface Props {
  title: string;
  description?: string;
  href: string;
  image?: ImageMetadata;
  imageUrl?: string;
  imageAlt?: string;
  status?: string;
  statusLabel?: string;
  category?: string;
  featured?: boolean;
  type?: "hardware" | "software" | "people" | "partners" | "studies" | "events";
  links?: {
    github?: string;
    docs?: string;
    demo?: string;
  };
}

const {
  title,
  description,
  href,
  image,
  imageUrl,
  imageAlt,
  status,
  statusLabel,
  category,
  featured,
  type = "hardware",
  links,
} = Astro.props;

// Convert Astro image to URL string if provided
const finalImageUrl = image?.src || imageUrl;
---

<ItemCardReact
  client:load
  title={title}
  description={description}
  href={href}
  imageUrl={finalImageUrl}
  imageAlt={imageAlt}
  status={status}
  statusLabel={statusLabel}
  category={category}
  featured={featured}
  type={type}
  links={links}
/>
