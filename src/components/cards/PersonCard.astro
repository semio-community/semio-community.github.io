---
import { getEntry } from "astro:content";
import { PersonCard as PersonCardReact } from "./PersonCard";

interface Props {
  personId: string;
  className?: string;
}

const { personId, className } = Astro.props;

const person = await getEntry("people", personId);

if (!person) {
  return null;
}
---

<PersonCardReact
  client:load
  personId={personId}
  data={person.data}
  className={className}
/>
