---
import { getEntry } from "astro:content";
import { HardwareCard as HardwareCardReact } from "./HardwareCard";

interface Props {
  hardwareId: string;
  className?: string;
}

const { hardwareId, className } = Astro.props;

const hardware = await getEntry("hardware", hardwareId);

if (!hardware) {
  return null;
}
---

<HardwareCardReact
  client:load
  hardwareId={hardwareId}
  data={hardware.data}
  className={className}
/>
