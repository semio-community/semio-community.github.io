---
import { Icon } from "astro-icon/components";

export interface Props {
  icon: string;
  title: string;
  description?: string;
  class?: string;
}

const { icon, title, description, class: className = "" } = Astro.props;
---

<div
  class={`p-4 sm:p-6 bg-special-lighter rounded-lg text-center ${className}`}
>
  <Icon name={icon} class="w-12 h-12 mx-auto mb-4 text-accent-two" />
  <h3 class="text-lg font-semibold mb-2">{title}</h3>
  {
    description && (
      <p class="text-sm text-color-600 dark:text-color-400">{description}</p>
    )
  }
  <slot />
</div>
