---
import { getEntry } from "astro:content";
import { PersonListElement as PersonListElementReact } from "./PersonListElement";

interface Props {
  personId: string;
  affiliationLabel?: string;
  className?: string;
}

const { personId, affiliationLabel, className } = Astro.props as Props;

const person = await getEntry("people", personId);

if (!person) {
  return null;
}
---

<PersonListElementReact
  client:load
  personId={personId}
  data={person.data}
  affiliationLabel={affiliationLabel}
  className={className}
/>
