---
import { getEntry } from "astro:content";
import { OrganizationChip as OrganizationChipReact } from "./OrganizationChip.tsx";

interface Props {
  partnerId: string;
  role?: string;
  href?: string;
  className?: string;
}

const { partnerId, role, href, className } = Astro.props;
const organization = await getEntry("organizations", partnerId);

// Pass the organization data to the React component for display
const resolvedHref =
  href !== undefined ? href : organization?.data?.isPartner ? undefined : null;
---

<OrganizationChipReact
  client:load
  partnerId={partnerId}
  partnerName={organization?.data?.shortName || organization?.data?.name}
  logo={organization?.data?.images?.logo}
  role={role}
  href={resolvedHref}
  className={className}
/>
