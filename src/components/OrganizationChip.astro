---
import { getEntry } from "astro:content";
import { OrganizationChip as OrganizationChipReact } from "./OrganizationChip.tsx";

interface Props {
  partnerId: string;
  role?: string;
  href?: string;
  className?: string;
}

const { partnerId, role, href, className } = Astro.props;
const partner = await getEntry("partners", partnerId);

// Pass the full partner data to the React component
// The image will be properly resolved by Astro's content collections
---

<OrganizationChipReact
  client:load
  partnerId={partnerId}
  partnerName={partner?.data?.shortName || partner?.data?.name}
  logo={partner?.data?.images?.logo}
  role={role}
  href={href}
  className={className}
/>
