{
  "$ref": "#/definitions/organizations",
  "definitions": {
    "organizations": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "errorMessage": {
            "minLength": "organizationId must reference an organizations collection entry"
          }
        },
        "name": {
          "type": "string"
        },
        "shortName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "academic",
            "industry",
            "nonprofit",
            "government",
            "community"
          ]
        },
        "category": {
          "type": "string",
          "enum": [
            "research",
            "development",
            "funding",
            "infrastructure",
            "outreach"
          ]
        },
        "isPartner": {
          "type": "boolean",
          "default": false
        },
        "isGrantMaker": {
          "type": "boolean",
          "default": false
        },
        "isDonor": {
          "type": "boolean",
          "default": false
        },
        "collaborationSummary": {
          "type": "string"
        },
        "images": {
          "type": "object",
          "properties": {
            "logo": {
              "type": "string"
            },
            "hero": {
              "type": "string"
            },
            "gallery": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "links": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": "string"
            },
            "website": {
              "type": "string"
            },
            "github": {
              "type": "string"
            },
            "linkedin": {
              "type": "string"
            },
            "twitter": {
              "type": "string"
            },
            "bluesky": {
              "type": "string"
            },
            "mastodon": {
              "type": "string"
            },
            "scheduling": {
              "type": "string"
            },
            "googleScholar": {
              "type": "string"
            },
            "orcid": {
              "type": "string"
            },
            "documentation": {
              "type": "string"
            },
            "paper": {
              "type": "string"
            },
            "purchase": {
              "type": "string"
            },
            "rental": {
              "type": "string"
            },
            "demo": {
              "type": "string"
            },
            "pypi": {
              "type": "string"
            },
            "npm": {
              "type": "string"
            },
            "pdf": {
              "type": "string"
            },
            "doi": {
              "type": "string"
            },
            "arxiv": {
              "type": "string"
            },
            "code": {
              "type": "string"
            },
            "data": {
              "type": "string"
            },
            "video": {
              "type": "string"
            },
            "registration": {
              "type": "string"
            },
            "program": {
              "type": "string"
            },
            "proceedings": {
              "type": "string"
            },
            "recordings": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "location": {
          "type": "object",
          "properties": {
            "city": {
              "type": "string"
            },
            "country": {
              "type": "string"
            }
          },
          "required": [
            "city",
            "country"
          ],
          "additionalProperties": false
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "draft": {
          "type": "boolean"
        },
        "order": {
          "type": "number",
          "default": 999
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "type",
        "category",
        "location"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}