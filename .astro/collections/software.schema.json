{
  "$ref": "#/definitions/software",
  "definitions": {
    "software": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "errorMessage": {
            "minLength": "softwareId must reference a software collection entry"
          }
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "shortDescription": {
          "type": "string",
          "maxLength": 200
        },
        "category": {
          "type": "string",
          "enum": [
            "framework",
            "library",
            "tool",
            "simulation",
            "dataset",
            "model"
          ]
        },
        "status": {
          "type": "string",
          "enum": [
            "stable",
            "beta",
            "alpha",
            "in-progress",
            "deprecated"
          ]
        },
        "license": {
          "type": "string"
        },
        "language": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "platform": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "requirements": {
          "type": "object",
          "properties": {
            "runtime": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "hardware": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "dependencies": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "features": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "links": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": "string"
            },
            "website": {
              "type": "string"
            },
            "github": {
              "type": "string"
            },
            "linkedin": {
              "type": "string"
            },
            "twitter": {
              "type": "string"
            },
            "bluesky": {
              "type": "string"
            },
            "mastodon": {
              "type": "string"
            },
            "scheduling": {
              "type": "string"
            },
            "googleScholar": {
              "type": "string"
            },
            "orcid": {
              "type": "string"
            },
            "documentation": {
              "type": "string"
            },
            "paper": {
              "type": "string"
            },
            "purchase": {
              "type": "string"
            },
            "rental": {
              "type": "string"
            },
            "demo": {
              "type": "string"
            },
            "pypi": {
              "type": "string"
            },
            "npm": {
              "type": "string"
            },
            "pdf": {
              "type": "string"
            },
            "doi": {
              "type": "string"
            },
            "arxiv": {
              "type": "string"
            },
            "code": {
              "type": "string"
            },
            "data": {
              "type": "string"
            },
            "video": {
              "type": "string"
            },
            "registration": {
              "type": "string"
            },
            "program": {
              "type": "string"
            },
            "proceedings": {
              "type": "string"
            },
            "recordings": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "images": {
          "type": "object",
          "properties": {
            "logo": {
              "type": "string"
            },
            "hero": {
              "type": "string"
            },
            "gallery": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "contributors": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "person"
                  },
                  "personId": {
                    "type": "string",
                    "minLength": 1,
                    "errorMessage": {
                      "minLength": "personId must reference a people collection entry"
                    }
                  },
                  "role": {
                    "type": "string",
                    "minLength": 1
                  },
                  "primary": {
                    "type": "boolean",
                    "default": false
                  },
                  "startDate": {
                    "anyOf": [
                      {
                        "type": "string",
                        "format": "date-time"
                      },
                      {
                        "type": "string",
                        "format": "date"
                      },
                      {
                        "type": "integer",
                        "format": "unix-time"
                      }
                    ]
                  },
                  "endDate": {
                    "anyOf": [
                      {
                        "type": "string",
                        "format": "date-time"
                      },
                      {
                        "type": "string",
                        "format": "date"
                      },
                      {
                        "type": "integer",
                        "format": "unix-time"
                      }
                    ]
                  }
                },
                "required": [
                  "type",
                  "personId",
                  "role"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "organization"
                  },
                  "organizationId": {
                    "type": "string",
                    "minLength": 1,
                    "errorMessage": {
                      "minLength": "organizationId must reference an organizations collection entry"
                    }
                  },
                  "role": {
                    "$ref": "#/definitions/software/properties/contributors/items/anyOf/0/properties/role"
                  },
                  "primary": {
                    "$ref": "#/definitions/software/properties/contributors/items/anyOf/0/properties/primary"
                  },
                  "startDate": {
                    "$ref": "#/definitions/software/properties/contributors/items/anyOf/0/properties/startDate"
                  },
                  "endDate": {
                    "$ref": "#/definitions/software/properties/contributors/items/anyOf/0/properties/endDate"
                  }
                },
                "required": [
                  "type",
                  "organizationId",
                  "role"
                ],
                "additionalProperties": false
              }
            ]
          }
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "draft": {
          "type": "boolean"
        },
        "publishDate": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "string",
                  "format": "date"
                },
                {
                  "type": "integer",
                  "format": "unix-time"
                }
              ]
            }
          ],
          "default": "2025-10-17T18:35:54.352Z"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "description",
        "shortDescription",
        "category",
        "status",
        "license",
        "language",
        "platform",
        "features",
        "topics"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}