{
  "$ref": "#/definitions/software",
  "definitions": {
    "software": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "shortDescription": {
          "type": "string",
          "maxLength": 200
        },
        "category": {
          "type": "string",
          "enum": [
            "framework",
            "library",
            "tool",
            "simulation",
            "dataset",
            "model"
          ]
        },
        "status": {
          "type": "string",
          "enum": [
            "stable",
            "beta",
            "alpha",
            "in-progress",
            "deprecated"
          ]
        },
        "license": {
          "type": "string"
        },
        "language": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "platform": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "requirements": {
          "type": "object",
          "properties": {
            "runtime": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "hardware": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "dependencies": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "features": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "useCases": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "links": {
          "type": "object",
          "properties": {
            "documentation": {
              "type": "string"
            },
            "github": {
              "type": "string"
            },
            "website": {
              "type": "string"
            },
            "paper": {
              "type": "string"
            },
            "demo": {
              "type": "string"
            },
            "pypi": {
              "type": "string"
            },
            "npm": {
              "type": "string"
            }
          },
          "required": [
            "github"
          ],
          "additionalProperties": false
        },
        "images": {
          "type": "object",
          "properties": {
            "logo": {
              "type": "string"
            },
            "hero": {
              "type": "string"
            },
            "gallery": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "contributors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "person",
                  "organization"
                ]
              },
              "id": {
                "type": "string"
              },
              "role": {
                "type": "string"
              },
              "startDate": {
                "anyOf": [
                  {
                    "type": "string",
                    "format": "date-time"
                  },
                  {
                    "type": "string",
                    "format": "date"
                  },
                  {
                    "type": "integer",
                    "format": "unix-time"
                  }
                ]
              },
              "endDate": {
                "anyOf": [
                  {
                    "type": "string",
                    "format": "date-time"
                  },
                  {
                    "type": "string",
                    "format": "date"
                  },
                  {
                    "type": "integer",
                    "format": "unix-time"
                  }
                ]
              },
              "current": {
                "type": "boolean",
                "default": true
              }
            },
            "required": [
              "type",
              "id"
            ],
            "additionalProperties": false
          }
        },
        "leadOrganization": {
          "type": "string"
        },
        "supportingOrganizations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "draft": {
          "type": "boolean"
        },
        "lastUpdate": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "string",
                  "format": "date"
                },
                {
                  "type": "integer",
                  "format": "unix-time"
                }
              ]
            }
          ]
        },
        "publishDate": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "string",
                  "format": "date"
                },
                {
                  "type": "integer",
                  "format": "unix-time"
                }
              ]
            }
          ],
          "default": "2025-10-11T21:51:24.435Z"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "description",
        "shortDescription",
        "category",
        "status",
        "license",
        "language",
        "platform",
        "features",
        "useCases",
        "links",
        "lastUpdate"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}