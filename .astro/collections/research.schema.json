{
  "$ref": "#/definitions/research",
  "definitions": {
    "research": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "contributors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "personId": {
                "type": "string",
                "minLength": 1,
                "errorMessage": {
                  "minLength": "personId must reference a people collection entry"
                }
              },
              "order": {
                "type": "number"
              },
              "corresponding": {
                "type": "boolean",
                "default": false
              },
              "equalContribution": {
                "type": "boolean",
                "default": false
              },
              "affiliationSnapshot": {
                "type": "string"
              },
              "startDate": {
                "anyOf": [
                  {
                    "type": "string",
                    "format": "date-time"
                  },
                  {
                    "type": "string",
                    "format": "date"
                  },
                  {
                    "type": "integer",
                    "format": "unix-time"
                  }
                ]
              },
              "endDate": {
                "anyOf": [
                  {
                    "type": "string",
                    "format": "date-time"
                  },
                  {
                    "type": "string",
                    "format": "date"
                  },
                  {
                    "type": "integer",
                    "format": "unix-time"
                  }
                ]
              }
            },
            "required": [
              "personId",
              "order"
            ],
            "additionalProperties": false
          }
        },
        "type": {
          "type": "string",
          "enum": [
            "paper",
            "thesis",
            "report",
            "preprint",
            "dataset",
            "benchmark",
            "study"
          ]
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "organizations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "organizationId": {
                "type": "string",
                "minLength": 1,
                "errorMessage": {
                  "minLength": "organizationId must reference an organizations collection entry"
                }
              },
              "role": {
                "type": "string",
                "enum": [
                  "affiliated",
                  "funding",
                  "lead",
                  "collaborator"
                ]
              },
              "note": {
                "type": "string"
              },
              "startDate": {
                "$ref": "#/definitions/research/properties/contributors/items/properties/startDate"
              },
              "endDate": {
                "$ref": "#/definitions/research/properties/contributors/items/properties/endDate"
              }
            },
            "required": [
              "organizationId",
              "role"
            ],
            "additionalProperties": false
          }
        },
        "relatedHardware": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "errorMessage": {
              "minLength": "hardwareId must reference a hardware collection entry"
            }
          }
        },
        "relatedSoftware": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "errorMessage": {
              "minLength": "softwareId must reference a software collection entry"
            }
          }
        },
        "links": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": "string"
            },
            "website": {
              "type": "string"
            },
            "github": {
              "type": "string"
            },
            "linkedin": {
              "type": "string"
            },
            "twitter": {
              "type": "string"
            },
            "bluesky": {
              "type": "string"
            },
            "mastodon": {
              "type": "string"
            },
            "scheduling": {
              "type": "string"
            },
            "googleScholar": {
              "type": "string"
            },
            "orcid": {
              "type": "string"
            },
            "documentation": {
              "type": "string"
            },
            "paper": {
              "type": "string"
            },
            "purchase": {
              "type": "string"
            },
            "rental": {
              "type": "string"
            },
            "demo": {
              "type": "string"
            },
            "pypi": {
              "type": "string"
            },
            "npm": {
              "type": "string"
            },
            "pdf": {
              "type": "string"
            },
            "doi": {
              "type": "string"
            },
            "arxiv": {
              "type": "string"
            },
            "code": {
              "type": "string"
            },
            "data": {
              "type": "string"
            },
            "video": {
              "type": "string"
            },
            "registration": {
              "type": "string"
            },
            "program": {
              "type": "string"
            },
            "proceedings": {
              "type": "string"
            },
            "recordings": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "images": {
          "type": "object",
          "properties": {
            "logo": {
              "type": "string"
            },
            "hero": {
              "type": "string"
            },
            "gallery": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "draft": {
          "type": "boolean"
        },
        "publishDate": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "string",
                  "format": "date"
                },
                {
                  "type": "integer",
                  "format": "unix-time"
                }
              ]
            }
          ]
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "contributors",
        "type",
        "topics"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}