{
  "$ref": "#/definitions/events",
  "definitions": {
    "events": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "displayName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "conference",
            "workshop",
            "hackathon",
            "meetup",
            "webinar",
            "competition"
          ]
        },
        "format": {
          "type": "string",
          "enum": [
            "in-person",
            "virtual",
            "hybrid"
          ]
        },
        "startDate": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "string",
                  "format": "date"
                },
                {
                  "type": "integer",
                  "format": "unix-time"
                }
              ]
            }
          ]
        },
        "endDate": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "string",
                  "format": "date"
                },
                {
                  "type": "integer",
                  "format": "unix-time"
                }
              ]
            }
          ]
        },
        "registrationDeadline": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "string",
                  "format": "date"
                },
                {
                  "type": "integer",
                  "format": "unix-time"
                }
              ]
            }
          ]
        },
        "location": {
          "type": "object",
          "properties": {
            "venue": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "country": {
              "type": "string"
            },
            "online": {
              "type": "boolean",
              "default": false
            },
            "coordinates": {
              "type": "object",
              "properties": {
                "lat": {
                  "type": "number"
                },
                "lng": {
                  "type": "number"
                }
              },
              "required": [
                "lat",
                "lng"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "city",
            "country"
          ],
          "additionalProperties": false
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "attendee",
              "organizer",
              "sponsor",
              "exhibitor",
              "speaker",
              "panelist",
              "host",
              "winner",
              "competitor"
            ]
          },
          "default": []
        },
        "images": {
          "type": "object",
          "properties": {
            "logo": {
              "type": "string"
            },
            "hero": {
              "type": "string"
            },
            "gallery": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "tracks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "links": {
          "type": "object",
          "properties": {
            "website": {
              "type": "string"
            },
            "registration": {
              "type": "string"
            },
            "program": {
              "type": "string"
            },
            "proceedings": {
              "type": "string"
            },
            "recordings": {
              "type": "string"
            }
          },
          "required": [
            "website"
          ],
          "additionalProperties": false
        },
        "capacity": {
          "type": "number"
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "draft": {
          "type": "boolean"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "description",
        "type",
        "format",
        "startDate",
        "endDate",
        "location",
        "topics",
        "links"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}