{
  "$ref": "#/definitions/partners",
  "definitions": {
    "partners": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "shortName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "academic",
            "industry",
            "nonprofit",
            "government",
            "community"
          ]
        },
        "category": {
          "type": "string",
          "enum": [
            "research",
            "development",
            "funding",
            "infrastructure",
            "outreach"
          ]
        },
        "contact": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": "string"
            },
            "department": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "keyContacts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "personId": {
                "type": "string"
              },
              "role": {
                "type": "string"
              }
            },
            "required": [
              "personId",
              "role"
            ],
            "additionalProperties": false
          }
        },
        "collaboration": {
          "type": "object",
          "properties": {
            "areas": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "projects": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "startDate": {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "string",
                  "format": "date"
                },
                {
                  "type": "integer",
                  "format": "unix-time"
                }
              ]
            },
            "endDate": {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "string",
                  "format": "date"
                },
                {
                  "type": "integer",
                  "format": "unix-time"
                }
              ]
            },
            "active": {
              "type": "boolean",
              "default": true
            }
          },
          "required": [
            "areas",
            "startDate"
          ],
          "additionalProperties": false
        },
        "website": {
          "type": "string"
        },
        "images": {
          "type": "object",
          "properties": {
            "logo": {
              "type": "string"
            },
            "hero": {
              "type": "string"
            },
            "gallery": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "socialMedia": {
          "type": "object",
          "properties": {
            "twitter": {
              "type": "string"
            },
            "linkedin": {
              "type": "string"
            },
            "github": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "location": {
          "type": "object",
          "properties": {
            "city": {
              "type": "string"
            },
            "country": {
              "type": "string"
            }
          },
          "required": [
            "city",
            "country"
          ],
          "additionalProperties": false
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "draft": {
          "type": "boolean"
        },
        "order": {
          "type": "number",
          "default": 999
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "type",
        "category",
        "collaboration",
        "website",
        "location"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}